# Starter pipeline
# Start with a minimal pipeline that you can customize to build and deploy your code.
# Add steps that build, run tests, deploy, and more:
# https://aka.ms/yaml

trigger:
- main

pool:
  vmImage: ubuntu-latest

stages:
  - stage: Test
    jobs:
    - job: Test
      steps:
      - script: echo Testing app
  
  - stage: DeployUS1
    dependsOn: Test
    jobs:
      - job: DeployUS1
        steps:
        - script: echo Deploying to US1

  - stage: DeployUS2
    dependsOn: Test
    condition: failed() # runs when Test failed
    jobs:
      - job: DeployUS2
        steps:
        - script: echo Deploying to US2

  - stage: DeployEurope
    dependsOn: 
      - DeployUS1
      - DeployUS2
    condition: always()   # runs always
    jobs:
      - job: DeployEurope
        steps:
        - script: echo Deploying to Europe
